<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_border_list">

    <ImageView android:id="@+id/ivListaCor"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_centerVertical="true"
               android:layout_margin="5dp"
               android:background="@drawable/rounded_border_solid"/>

    <TextView android:id="@+id/tvNomeListaRow"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@id/ivListaCor"
              android:layout_centerVertical="true"
              android:layout_marginStart="5dp"
              android:text="Lista 1"/>

    <TextView android:id="@+id/tvQtItemListaRow"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:layout_marginEnd="15dp"
              android:text="1"/>

</RelativeLayout>