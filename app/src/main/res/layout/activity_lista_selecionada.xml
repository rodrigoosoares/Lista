<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlListaSelecionadaLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ListaSelecionadaActivity">

    <include layout="@layout/toolbar_layout"/>

    <TextView android:id="@+id/tvListaSelecionadaTitulo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_below="@id/toolbar"
              android:layout_marginTop="10dp"
              android:text="Itens"
              android:textSize="20sp"/>

    <ListView android:id="@+id/lvItens"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/tvListaSelecionadaTitulo"/>

    <TextView android:id="@+id/tvSemItens"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="Essa lista não possuí nenhum item."
              android:visibility="gone"/>

    <ImageButton android:id="@+id/btnAddItem"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignEnd="@id/etNomeItem"
                 android:layout_alignParentBottom="true"
                 android:layout_marginEnd="7dp"
                 android:src="@drawable/ic_add"
                 android:backgroundTint="@color/colorPrimary"
                 android:elevation="1dp"
                 android:visibility="invisible"/>

    <EditText android:id="@+id/etNomeItem"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:hint="Adicione um item"
              android:padding="10dp"
              android:background="@drawable/border_shadow"
              android:visibility="invisible"/>



   <android.support.design.widget.FloatingActionButton android:id="@+id/fabAddItem"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:layout_alignParentBottom="true"
                                                       android:layout_alignParentEnd="true"
                                                       android:layout_margin="20dp"
                                                       android:backgroundTint="@color/colorPrimary"
                                                       app:borderWidth="0dp"
                                                       android:src="@drawable/ic_add"
                                                       app:fabSize="normal" android:visibility="visible"/>
</RelativeLayout>